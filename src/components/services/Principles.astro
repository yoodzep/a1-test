---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const principles = [
  {
    title: "Quality workmanship",
    description:
      "We take pride in every job, ensuring all electrical work meets the highest standards of safety and craftsmanship.",
  },
  {
    title: "Honest service",
    description:
      "Upfront pricing, clear communication, and no hidden costs. We treat your property with respect and keep you informed.",
  },
  {
    title: "Safety first",
    description:
      "As Gold SiteWise certified electricians, safety is built into everything we do—for our team and your property.",
  },
  {
    title: "Customer focus",
    description:
      "Your satisfaction matters. We listen to your needs, respect your time, and stand behind our work.",
  },
];
---

<section class="bg-accent-950 relative overflow-hidden">
  <Wrapper
    variant="standard"
    class="py-24 lg:py-48 lg:border-x lg:border-white/10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Logo class="h-16" />
        <Kicker class="text-accent-400 mt-8">Our Principles</Kicker>
      </div>

      <div class="lg:col-span-2 text-balance">
        <Text tag="h2" variant="displayLG" class="text-white font-medium">
          The values that guide our work across
          <span class="text-accent-500">residential</span>,
          <span class="text-accent-500">commercial</span>, and
          <span class="text-accent-500">industrial electrical projects</span>
        </Text>

        <Text tag="p" variant="textLG" class="text-base-400 mt-4">
          These principles guide everything we do at A1 Electrical—from the smallest repair to the largest installation.
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-24 mt-12">
          {
            principles.map(({ title, description }) => (
              <div>
                <Text
                  tag="h3"
                  variant="displayXS"
                  class="font-medium text-white"
                >
                  {title}
                </Text>
                <Text tag="p" variant="textSM" class="text-base-400 mt-2">
                  {description}
                </Text>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </Wrapper>
</section>
