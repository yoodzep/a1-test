---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import UnderlinedLink from "@/components/fundations/elements/UnderlinedLink.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const cards = [
  {
    title: "Our Services",
    description:
      "Explore our full range of electrical services for residential, commercial, and industrial projects.",
    href: "/services",
    cta: "View all services",
  },
  {
    title: "FAQs",
    description: "Find answers to common questions about our services, pricing, and processes.",
    href: "/faqs",
    cta: "View FAQs",
  },
  {
    title: "Join Our Team",
    description: "We're always looking for skilled electricians and apprentices to join our crew.",
    href: "/careers",
    cta: "View opportunities",
  },
];
---

<section class="bg-accent-950">
  <Wrapper variant="standard" class="py-24 lg:py-48">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <Kicker class="text-base-300">Explore</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-white font-medium lg:col-span-2"
      >
        Discover how A1 Electrical can help with
        <span class="text-accent-500"> all your electrical needs,</span>
        <span class="text-accent-500"> big or small!</span>
      </Text>
    </div>
    <div
      class="grid gap-6 lg:gap-8 md:grid-cols-2 lg:grid-cols-3 mt-12 lg:mt-24"
    >
      {
        cards.map((card) => (
          <div>
            <div>
              <Text tag="h3" variant="textLG" class="font-medium text-base-100">
                {card.title}
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="text-base-400 mt-2 text-balance"
              >
                {card.description}
              </Text>
            </div>
            <UnderlinedLink variant="light" href={card.href} class="mt-12">
              {card.cta}
            </UnderlinedLink>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
