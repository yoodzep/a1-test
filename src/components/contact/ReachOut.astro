---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const items = [
  {
    title: "Free quotes",
    description:
      "Get a clear, no-obligation quote for your electrical project. We'll assess your needs and provide honest, upfront pricing.",
  },
  {
    title: "Expert advice",
    description:
      "Our experienced team can help you understand your options and make informed decisions about your electrical work.",
  },
  {
    title: "Fast response",
    description:
      "We value your time and aim to respond to all enquiries within one business day. For emergencies, call our after-hours line.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <Kicker class="text-base-600">Why contact us</Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="font-medium tracking-tight text-balance lg:col-span-2"
      >
        Get in touch and let us help with your electrical project
        <span class="text-accent-500"> with expert advice and quality workmanship!</span>
      </Text>
    </div>
    <div
      class="grid gap-x-8 gap-y-12 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-12 lg:mt-24"
    >
      {
        items.map((item) => (
          <div>
            <Text
              tag="h3"
              variant="textLG"
              class="font-medium text-accent-900"
            >
              {item.title}
            </Text>
            <Text
              tag="p"
              variant="textSBase"
              class="text-base-600 text-pretty mt-2"
            >
              {item.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
