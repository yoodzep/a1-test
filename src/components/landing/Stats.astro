---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Button from "@/components/fundations/elements/Button.astro";
const reasons = [
  {
    title: "Master Electricians Certified",
    description: "EWRB licensed professionals with specialist certifications including heat pump installation and comprehensive safety qualifications.",
  },
  {
    title: "Comprehensive Services",
    description: "We handle all electrical projects from residential rewiring to commercial fitouts, including 24/7 emergency services.",
  },
  {
    title: "Rapid Emergency Response",
    description: "Fully equipped vehicles ready for rapid response throughout the Otago region, available to all our valued customers.",
  },
  {
    title: "Proven Local Expertise",
    description: "Trusted by Latitude Homes, DCC facilities, and local schools. Proud recipients of Contractor of the Year 2022.",
  },
];
---

<section class="bg-accent-950 relative overflow-hidden">
  <Wrapper
    variant="standard"
    class="py-24 lg:border-x lg:border-white/10"
  >
    <div class="max-w-3xl">
      <Kicker class="text-accent-300">Why Locals Choose A1 Electrical</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-white font-medium tracking-tight mt-6"
      >
        The trusted choice for <span class="text-[#4b92c4]">Dunedin</span> and <span class="text-[#4b92c4]">Otago electrical projects</span>
      </Text>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mt-12">
      {
        reasons.map((reason) => (
          <div class="border border-white/10 rounded-lg p-6">
            <Text
              tag="h3"
              variant="textLG"
              class="text-white font-medium"
            >
              {reason.title}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-400 mt-2">
              {reason.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>

