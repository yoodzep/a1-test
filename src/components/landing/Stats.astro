---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  { value: "40+", label: "Years in business" },
  { value: "1000+", label: "Projects completed" },
  { value: "100%", label: "Customer focused" },
];
---

<section class="bg-accent-950 relative overflow-hidden">
  <Wrapper
    variant="standard"
    class="py-24 lg:py-48 lg:border-x lg:border-white/10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Logo class="h-20 w-auto" />
        <Kicker class="text-base-400 mt-8">
          Trusted by homeowners and businesses throughout Dunedin and Otago</Kicker
        >
      </div>
      <div class="lg:col-span-2 text-pretty">
        <Text
          tag="h2"
          variant="displayLG"
          class="text-white font-medium tracking-tight"
        >
          From family homes to large commercial projects,
          <span class="text-accent-400">
            we deliver quality electrical solutions with the care and attention your project deserves.
          </span>
        </Text>
        <Text tag="p" variant="textLG" class="text-base-400 mt-4">
          Our team of qualified electricians brings expertise, professionalism, and genuine customer service to every job. We're proud to be Master Electricians with Gold SiteWise certification.
        </Text>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-8 mt-12">
          {
            stats.map((stat) => (
              <div>
                <Text
                  tag="p"
                  variant="display2XL"
                  class="text-white italic font-medium"
                >
                  {stat.value}
                </Text>
                <Text tag="p" variant="textLG" class="text-base-400 mt-1">
                  {stat.label}
                </Text>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </Wrapper>
</section>
