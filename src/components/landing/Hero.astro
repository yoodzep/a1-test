---
// Assets
import { Image } from "astro:assets";
import heroImage from "@/images/a1-electrical/General - 1.png";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  { value: "40+", label: "Years experience" },
  { value: "1000+", label: "Projects completed" },
  { value: "Gold", label: "SiteWise certified" },
  { value: "5 Star", label: "Customer rating" },
];
---

<section class="relative min-h-[80dvh] flex flex-col">
  <div class="absolute inset-0 z-0">
    <Image
      width={1920}
      height={1080}
      src={heroImage}
      alt="A1 Electrical team at work"
      decoding="async"
      loading="eager"
      class="size-full object-cover"
    />
    <div
      aria-hidden="true"
      class="absolute pointer-events-none inset-0 bg-accent-950/70"
    >
    </div>
  </div>
  <div class="relative z-10 flex-1 flex flex-col">
    <Wrapper
      variant="standard"
      class="flex-1 flex flex-col justify-end py-12 lg:pb-12 pt-24 lg:border-x lg:border-white/10"
    >
      <div class="max-w-xl text-balance">
        <Kicker class="text-white">Your Trusted Master Electricians</Kicker>
        <Text
          tag="h1"
          variant="displayLG"
          class="text-white font-medium tracking-tight mt-12"
        >
          A1 Electrical Constructions
        </Text>
        <Text tag="p" variant="textXL" class="text-accent-300 font-medium mt-2">
          Locally Owned. Professionally Certified. Community Proud.
        </Text>
        <Text tag="p" variant="textLG" class="text-white max-w-xl mt-4">
          Dunedin's trusted electrical experts for residential, commercial, and industrial projects. Quality workmanship backed by over 40 years of experience.
        </Text>
      </div>
    </Wrapper>
    <div class="relative z-10 border-t border-white/10">
      <Wrapper variant="standard" class="py-8 lg:border-x lg:border-white/10">
        <div
          class="grid grid-cols-2 md:grid-cols-4 gap-y-4 gap-x-8 lg:max-w-3xl lg:ml-auto"
        >
          {
            stats.map((stat) => (
              <div>
                <Text
                  tag="p"
                  variant="displayLG"
                  class="text-white italic font-medium"
                >
                  {stat.value}
                </Text>
                <Text tag="p" variant="textSM" class="text-base-400 mt-1">
                  {stat.label}
                </Text>
              </div>
            ))
          }
        </div>
      </Wrapper>
    </div>
  </div>
</section>
