---
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const focusAreas = [
  {
    title: "Residential Electrical",
    description:
      "From new builds to renovations, we deliver safe, efficient electrical solutions for homes throughout Dunedin and Otago. Expert workmanship you can trust.",
  },
  {
    title: "Commercial & Industrial",
    description:
      "Comprehensive electrical services for businesses, warehouses, and industrial facilities. We understand the unique requirements of commercial projects.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="max-w-3xl">
      <Kicker class="text-base-600">Why Choose A1 Electrical</Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="font-medium tracking-tight mt-12 text-balance"
      >
        <span class="text-accent-900">We're committed </span>
        <span class="text-accent-500">
          to delivering quality electrical work with honesty, reliability, and a genuine focus on customer satisfaction.
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        As Master Electricians with Gold SiteWise certification, we bring over 40 years of experience to every project. Our locally owned business takes pride in supporting the Dunedin community.
      </Text>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-12 lg:mt-24">
      {
        focusAreas.map((area) => (
          <div>
            <Text
              tag="h3"
              variant="textXL"
              class="text-accent-900 font-medium"
            >
              {area.title}
            </Text>
            <Text tag="p" variant="textLG" class="text-base-600 mt-2">
              {area.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
