---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import TeamCard from "@/components/team/TeamCard.astro";
// Content
import { getCollection } from "astro:content";
const allTeam = await getCollection("team");
allTeam.sort((a, b) => {
  const nameA = a.data.name.toLowerCase();
  const nameB = b.data.name.toLowerCase();
  return nameA.localeCompare(nameB);
});
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-x-8 gap-y-24">
      <div
        class="gap-4 flex flex-col h-full bg-alternative-300 p-8 justify-between"
      >
        <div>
          <Logo class="h-12 text-white" />
          <Text
            tag="h2"
            variant="displaySM"
            class="font-semibold tracking-tighter text-accent-900 mt-2"
          >
            Meet our team
          </Text>
        </div>
        <Button isLink size="xs" variant="muted" href="/team" class="w-fit">
          All team
        </Button>
      </div>
      {allTeam.slice(0, 2).map((post) => <TeamCard post={post} />)}
    </div>
  </Wrapper>
</section>
