---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  {
    value: "10+",
    title: "Years in Operation",
    description: "Consistent delivery across complex builds",
  },
  {
    value: "500+",
    title: "Projects Delivered",
    description: "Residential, commercial, and mixed-use",
  },
  {
    value: "100+",
    title: "On-Site Specialists",
    description: "Project managers, engineers, and trades",
  },
  {
    value: "95%",
    title: "Repeat & Referral Work",
    description: "Clients who choose to work with us again",
  },
  {
    value: "0",
    title: "Major Safety Incidents",
    description: "Maintained through strict on-site standards",
  },
  {
    value: "100%",
    title: "Projects Managed In-House",
    description: "From planning and supervision to final delivery",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        stats.map(({ value, title, description }) => (
          <div class="bg-base-50 rounded p-8">
            <Text
              tag="p"
              variant="displayXL"
              class="text-accent-900 italic font-medium"
            >
              {value}
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="text-accent-900 font-medium  mt-1"
            >
              {title}
            </Text>
            <Text tag="p" variant="textSM" class="text-base-600">
              {description}
            </Text>
          </div>
        ))
      }
    </div>
    <div class="max-w-4xl text-balance mt-12">
      <Kicker class="text-base-600">Measured performance</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12"
      >
        A track record built on disciplined planning, on-site control,
        <span class="text-accent-500">
          and projects delivered to clear standards
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        We approach every build with the same priorities: defined scope,
        accountable leadership, and execution that holds up long after handover.
        <br />
        <br />
        That consistency is what keeps clients coming back.
      </Text>
    </div>
  </Wrapper>
</section>
