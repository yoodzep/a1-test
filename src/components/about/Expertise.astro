---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  {
    value: "40+",
    title: "Years in Business",
    description: "Serving Dunedin and Otago since 1984",
  },
  {
    value: "1000+",
    title: "Projects Completed",
    description: "Residential, commercial, and industrial",
  },
  {
    value: "Gold",
    title: "SiteWise Certified",
    description: "Highest health and safety standards",
  },
  {
    value: "100%",
    title: "Customer Focused",
    description: "Satisfaction guaranteed on every job",
  },
  {
    value: "Master",
    title: "Electricians",
    description: "Professional certification and expertise",
  },
  {
    value: "24/7",
    title: "Emergency Service",
    description: "After-hours support when you need it",
  },
];

const team = [
  {
    name: "Darren Bain",
    role: "Director & Lead Electrician",
    bio: "With over 40 years of experience in the electrical trade, Darren founded A1 Electrical with a commitment to quality workmanship and honest customer service. As a Master Electrician, he leads our team with hands-on expertise and a dedication to getting every job done right.",
  },
  {
    name: "Phillipa Bain",
    role: "Administration & Customer Relations",
    bio: "Phillipa manages our office operations and ensures every customer receives prompt, friendly service. She handles scheduling, quotes, and communications, making sure your experience with A1 Electrical is smooth from first contact to job completion.",
  },
];

const certifications = [
  "Master Electricians New Zealand",
  "ECANZ Member",
  "Gold SiteWise Certification",
  "SafePower Approved",
  "BNI Member",
  "SuperGold Card Accepted",
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        stats.map(({ value, title, description }) => (
          <div class="bg-base-50 rounded p-8">
            <Text
              tag="p"
              variant="displayXL"
              class="text-accent-900 italic font-medium"
            >
              {value}
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="text-accent-900 font-medium mt-1"
            >
              {title}
            </Text>
            <Text tag="p" variant="textSM" class="text-base-600">
              {description}
            </Text>
          </div>
        ))
      }
    </div>

    <!-- Team Section -->
    <div class="mt-24">
      <Kicker class="text-base-600">Meet the Team</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12 max-w-3xl"
      >
        A family business built on trust and expertise
      </Text>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-12">
        {
          team.map(({ name, role, bio }) => (
            <div class="bg-base-50 rounded p-8">
              <Text tag="h3" variant="textXL" class="text-accent-900 font-medium">
                {name}
              </Text>
              <Text tag="p" variant="textBase" class="text-accent-600 font-medium">
                {role}
              </Text>
              <Text tag="p" variant="textBase" class="text-base-600 mt-4">
                {bio}
              </Text>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Certifications Section -->
    <div class="mt-24">
      <Kicker class="text-base-600">Professional Credentials</Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="text-accent-900 font-medium mt-12 max-w-3xl"
      >
        Certified, insured, and committed to the highest standards
      </Text>
      <div class="flex flex-wrap gap-3 mt-8">
        {
          certifications.map((cert) => (
            <span class="bg-accent-100 text-accent-800 px-4 py-2 rounded-full text-sm font-medium">
              {cert}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Community Section -->
    <div class="max-w-4xl text-balance mt-24">
      <Kicker class="text-base-600">Community Involvement</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12"
      >
        Proud to support our local community
        <span class="text-accent-500">
          through sponsorships and involvement
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        A1 Electrical is more than just a business - we're part of the Dunedin community. We proudly support local sports teams, schools, and community organisations. When you choose A1 Electrical, you're supporting a business that gives back to the community we all share.
        <br />
        <br />
        We also accept SuperGold Cards and offer flexible finance options through MTF Finance to make quality electrical work accessible to everyone.
      </Text>
    </div>
  </Wrapper>
</section>
