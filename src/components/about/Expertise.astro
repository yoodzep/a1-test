---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const stats = [
  {
    value: "40+",
    title: "Years in Business",
    description: "Serving Dunedin and Otago since 1984",
  },
  {
    value: "1000+",
    title: "Projects Completed",
    description: "Residential, commercial, and industrial",
  },
  {
    value: "Gold",
    title: "SiteWise Certified",
    description: "Highest health and safety standards",
  },
  {
    value: "100%",
    title: "Customer Focused",
    description: "Satisfaction guaranteed on every job",
  },
  {
    value: "Master",
    title: "Electricians",
    description: "Professional certification and expertise",
  },
  {
    value: "24/7",
    title: "Emergency Service",
    description: "After-hours support when you need it",
  },
];

const team = [
  {
    name: "Darren Bain",
    role: "Co-owner and Lead Master Electrician",
    image: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68e46b79c000f1cc15b39eae_Darren.avif",
    bio: "With 30 years of hands-on experience as an electrician, Darren brings both technical expertise and genuine leadership to every project. As a fully licensed Master Electrician, he's tackled everything from intricate residential rewiring to large-scale commercial installations for local landmarks like OBHS Sports Dome and businesses throughout the Otago region.<br /><br />Darren's calm, methodical approach means complex problems get sorted efficiently, whilst his commitment to mentoring ensures every team member meets the same high standards. Whether he's installing heat pumps for families in Green Island or coordinating power line protection services, Darren's reputation for reliability speaks for itself.",
  },
  {
    name: "Phillipa Bain",
    role: "Co-owner and Business Manager",
    image: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68e46b4446259052159033ee_Phillipa.avif",
    bio: "Phillipa is the organised force that keeps A1 Electrical running like clockwork. As co-owner alongside Darren since 2006, she brings her extensive business operations expertise and genuine care for excellence to every aspect of the company.<br /><br />Behind the scenes, Phillipa manages the critical business operations that ensure seamless service delivery - from accounts and health & safety compliance to strategic planning and operational systems. Her meticulous approach to business management and commitment to maintaining A1 Electrical's high standards means clients experience reliability and professionalism at every touchpoint.",
  },
];

const certifications = [
  {
    name: "Master Electricians New Zealand members",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd47660c35eff651861_a1-master-electricians-new-zealand-members.svg",
  },
  {
    name: "Certificate of Compliance (COC) providers",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd4adfd558af153c35e_a1-certificate-of-compliance-coc-providers.svg",
  },
  {
    name: "Working from heights qualified",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd4a9b3ff9512e3218d_a1-working-from-heights-qualified.svg",
  },
  {
    name: "Safe chemical handling certified",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd413f83687643072a8_a1-safe-chemical-handling-certified.svg",
  },
  {
    name: "Fujitsu and Mitsubishi accredited heat pump installers",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd4af63a76729ccc7a1_a1-fujitsu-and-mitsubishi-accredited-heat-pump-installers.svg",
  },
  {
    name: "Gold Site Safe Certified for two consecutive years",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd46e04cba3dd2e474f_a1-gold-site-safe-certified-for-two-consecutive-years.svg",
  },
  {
    name: "Electrical Workers Registration Board (EWRB) licensed professionals",
    logo: "https://cdn.prod.website-files.com/68a289841b16ba25d4f0a48b/68b63dd43e521f2c5f41831c_a1-electrical-workers-registration-board-ewrb-licensed-professionals.svg",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        stats.map(({ value, title, description }) => (
          <div class="bg-base-50 rounded p-8">
            <Text
              tag="p"
              variant="displayXL"
              class="text-accent-900 italic font-medium"
            >
              {value}
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="text-accent-900 font-medium mt-1"
            >
              {title}
            </Text>
            <Text tag="p" variant="textSM" class="text-base-600">
              {description}
            </Text>
          </div>
        ))
      }
    </div>

    <!-- Team Section -->
    <div class="mt-24">
      <Kicker class="text-base-600">Meet the Team</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12 max-w-3xl"
      >
        A family business built on trust and expertise
      </Text>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-12">
        {
          team.map(({ name, role, image, bio }) => (
            <div class="rounded overflow-hidden">
              <div class="bg-white">
                <img
                  src={image}
                  alt={name}
                  width={292}
                  height={292}
                  loading="lazy"
                  decoding="async"
                  class="max-w-[292px] max-h-[292px] aspect-square object-cover mx-auto lg:mx-0"
                />
              </div>
              <div class="p-8">
                <Text tag="h3" variant="textXL" class="text-accent-900 font-medium">
                  {name}
                </Text>
                <Text tag="p" variant="textBase" class="text-accent-600 font-medium">
                  {role}
                </Text>
                <Text tag="p" variant="textBase" class="text-base-600 mt-4" set:html={bio} />
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Certifications Section -->
    <div class="mt-24">
      <Kicker class="text-base-600">Professional Credentials</Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="text-accent-900 font-medium mt-12 max-w-3xl"
      >
        Certified, insured, and committed to the highest standards
      </Text>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6 mt-12">
        {
          certifications.map((cert) => (
            <div class="flex flex-col items-center text-center p-4 bg-base-50 rounded">
              <img
                src={cert.logo}
                alt={cert.name}
                width={80}
                height={80}
                loading="lazy"
                decoding="async"
                class="h-20 w-auto object-contain"
              />
              <Text tag="p" variant="textSM" class="text-base-600 mt-3">
                {cert.name}
              </Text>
            </div>
          ))
        }
      </div>
      <Text tag="p" variant="textBase" class="text-base-600 mt-8">
        Our <strong>Gold Site Safe certification for two consecutive years</strong> reflects our unwavering commitment to workplace safety and professional practice. This recognition demonstrates our dedication to maintaining the highest safety standards on every project, protecting our team, clients, and the broader community.
      </Text>
    </div>

    <!-- Community Section -->
    <div class="max-w-4xl text-balance mt-24">
      <Kicker class="text-base-600">Community Involvement</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12"
      >
        Proud to support our local community
        <span class="text-accent-500">
          through sponsorships and involvement
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        A1 Electrical is more than just a business - we're part of the Dunedin community. We proudly support local sports teams, schools, and community organisations. When you choose A1 Electrical, you're supporting a business that gives back to the community we all share.
        <br />
        <br />
        We also accept SuperGold Cards and offer flexible finance options through MTF Finance to make quality electrical work accessible to everyone.
      </Text>
    </div>
  </Wrapper>
</section>
