---
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/navigation/Navigation.astro";
// Scripts
import KeenSliderTestimonials from "@/components/fundations/scripts/KeenSliderTestimonials.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  hideNavigation?: boolean;
  hideFooter?: boolean;
  navTransparent?: boolean;
}

// Hides the big logo, navigation, or footer on selected screens by passing props:
// <BaseLayout hideFooter={true}>
// Control transparent nav per page with:
// <BaseLayout navTransparent={true}>
const {
  title,
  description,
  canonical,
  image,
  noindex = false,
  hideNavigation = false,
  hideFooter = false,
  navTransparent,
} = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} image={image} noindex={noindex} />
  </head>
  <body class="flex flex-col bg-white min-h-dvh">
    {
      !hideNavigation &&
        (navTransparent !== undefined ? (
          <Navigation transparent={navTransparent} />
        ) : (
          <Navigation />
        ))
    }
    <main class="grow"><slot /></main>
    {!hideFooter && <Footer />}
    <KeenSliderTestimonials />
  </body>
</html>
