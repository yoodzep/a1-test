---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Button from "@/components/fundations/elements/Button.astro";
// Sections
import Principles from "@/components/services/Principles.astro";
import Testimonials from "@/components/customers/Testimonials.astro";
// Components
import ServiceCard from "@/components/services/ServiceCard.astro";
// Content
import { getCollection } from "astro:content";
const services = await getCollection("services");
const serviceOrder = [
  "new-builds",
  "alterations-renovations",
  "electrical-rewiring",
  "heat-pump-installation",
  "electrical-inspections",
  "smart-home-outdoor",
  "commercial-electrical",
  "power-line-wraps",
];
services.sort((a, b) => {
  const aIndex = serviceOrder.indexOf(a.slug);
  const bIndex = serviceOrder.indexOf(b.slug);
  return aIndex - bIndex;
});
---

<BaseLayout
  title="Electrical Services Dunedin - A1 Electrical"
  description="Professional electrical services in Dunedin: new builds, renovations, rewiring, heat pumps, commercial fit-outs. Master Electricians. Free quotes."
  navTransparent={true}
>
  <section class="bg-accent-800">
    <Wrapper
      variant="standard"
      class="py-12 pt-48 lg:border-x lg:border-white/10"
    >
      <div class="grid grid-cols-1 lg:grid-cols-3 lg:items-end gap-12">
        <div class="max-w-4xl text-balance lg:col-span-2">
          <Kicker class="text-white">Our Services</Kicker>
          <Text
            tag="h1"
            variant="displayMD"
            class="font-medium tracking-tight mt-12 text-white"
          >
            Professional electrical services for every need
          </Text>
          <Text tag="p" variant="textLG" class="text-base-200 mt-4">
            From new builds to repairs, residential to commercial, A1 Electrical delivers quality electrical solutions with the care and expertise your project deserves.
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-24">
      <Text
        tag="h2"
        variant="displayMD"
        class="font-medium tracking-tight text-accent-900 mb-12"
      >
        Electrical Services You Can Trust
      </Text>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-6 gap-y-12">
        {services.map((service) => <ServiceCard service={service} />)}
      </div>
    </Wrapper>
  </section>
  <Principles />
  <Testimonials />

  <section class="bg-accent-600">
    <Wrapper variant="standard" class="py-20">
      <div class="text-center">
        <Text
          tag="h2"
          variant="displayMD"
          class="text-white font-medium italic tracking-tight"
        >
          Start Your Project Today
        </Text>
        <Button
          isLink
          size="base"
          variant="muted"
          href="/contact"
          class="w-fit mt-8 mx-auto"
        >
          Consult Our Experts
        </Button>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
