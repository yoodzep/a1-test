---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const colors = [
  {
    name: "Accent",
    shades: [
      { name: "Accent 50", class: "bg-accent-50" },
      { name: "Accent 100", class: "bg-accent-100" },
      { name: "Accent 200", class: "bg-accent-200" },
      { name: "Accent 300", class: "bg-accent-300" },
      { name: "Accent 400", class: "bg-accent-400" },
      { name: "Accent 500", class: "bg-accent-500" },
      { name: "Accent 600", class: "bg-accent-600" },
      { name: "Accent 700", class: "bg-accent-700" },
      { name: "Accent 800", class: "bg-accent-800" },
      { name: "Accent 900", class: "bg-accent-900" },
      { name: "Accent 950", class: "bg-accent-950 outline outline-accent-900" },
    ],
  },

  {
    name: "Secondary",
    shades: [
      { name: "Secondary 50", class: "bg-secondary-50" },
      { name: "Secondary 100", class: "bg-secondary-100" },
      { name: "Secondary 200", class: "bg-secondary-200" },
      { name: "Secondary 300", class: "bg-secondary-300" },
      { name: "Secondary 400", class: "bg-secondary-400" },
      { name: "Secondary 500", class: "bg-secondary-500" },
      { name: "Secondary 600", class: "bg-secondary-600" },
      { name: "Secondary 700", class: "bg-secondary-700" },
      { name: "Secondary 800", class: "bg-secondary-800" },
      { name: "Secondary 900", class: "bg-secondary-900" },
      {
        name: "Secondary 950",
        class: "bg-secondary-950 outline outline-secondary-900",
      },
    ],
  },

  {
    name: "Alternative",
    shades: [
      { name: "Alternative 50", class: "bg-alternative-50" },
      { name: "Alternative 100", class: "bg-alternative-100" },
      { name: "Alternative 200", class: "bg-alternative-200" },
      { name: "Alternative 300", class: "bg-alternative-300" },
      { name: "Alternative 400", class: "bg-alternative-400" },
      { name: "Alternative 500", class: "bg-alternative-500" },
      { name: "Alternative 600", class: "bg-alternative-600" },
      { name: "Alternative 700", class: "bg-alternative-700" },
      { name: "Alternative 800", class: "bg-alternative-800" },
      { name: "Alternative 900", class: "bg-alternative-900" },
      {
        name: "Alternative 950",
        class: "bg-alternative-950 outline outline-alternative-900",
      },
    ],
  },

  {
    name: "Base",
    shades: [
      { name: "Base 50", class: "bg-base-50" },
      { name: "Base 100", class: "bg-base-100" },
      { name: "Base 200", class: "bg-base-200" },
      { name: "Base 300", class: "bg-base-300" },
      { name: "Base 400", class: "bg-base-400" },
      { name: "Base 500", class: "bg-base-500" },
      { name: "Base 600", class: "bg-base-600" },
      { name: "Base 700", class: "bg-base-700" },
      { name: "Base 800", class: "bg-base-800" },
      { name: "Base 900", class: "bg-base-900" },
      { name: "Base 950", class: "bg-base-950 outline outline-base-900" },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24 lg:pt-48">
      <Text tag="h2" variant="displaySM" class="font-medium text-base-900">
        Colors
      </Text>
      <div class="flex flex-col mt-12 gap-12">
        {
          colors.map((color) => (
            <div class="flex flex-col gap-2">
              <h3 class="text-xs font-semibold uppercase dark:text-white text-base-900">
                {color.name}
              </h3>
              <div class="mt-2 grid grid-cols-3 lg:grid-cols-11 gap-1 gap-y-8">
                {color.shades.map((shade) => (
                  <div class="flex flex-col gap-2">
                    <div
                      class={`size-full aspect-square rounded-md ${shade.class}`}
                    />
                    <span class="text-xs text-base-600">{shade.name}</span>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
